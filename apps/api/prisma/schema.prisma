generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
  binaryTargets   = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isDeleted Boolean  @default(false)

  username String @unique
  password String

  @@map("oa_admins")
}

model App {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isDeleted Boolean  @default(false)

  name        String  @unique
  description String?
  logoUrl     String?
  secret      String?

  emailEnabled   Boolean @default(false)
  googleEnabled  Boolean @default(false)
  twitterEnabled Boolean @default(false)
  appleEnabled   Boolean @default(false)
  ethEnabled     Boolean @default(false)
  solEnabled     Boolean @default(false)

  users     User[]
  referrals Referral[]

  @@map("oa_apps")
}

model User {
  id         String    @id @default(uuid())
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  lastSeenAt DateTime?

  email      String?
  google     String?
  twitter    String?
  apple      String?
  ethAddress String?
  solAddress String?

  referCode  String?
  referChain String?

  appId String
  app   App    @relation(fields: [appId], references: [id])

  @@unique([appId, referCode])
  @@unique([appId, email])
  @@unique([appId, google])
  @@unique([appId, twitter])
  @@unique([appId, apple])
  @@unique([appId, ethAddress])
  @@unique([appId, solAddress])
  @@map("oa_users")
}

model Referral {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  appId     String
  app       App      @relation(fields: [appId], references: [id])

  referrer String
  referee  String

  @@unique([referee])
  @@index([referrer])
  @@map("oa_referrals")
}
